{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "incremental": true,
    "strict": true,
    "rootDir": "../../",
    "outDir": "public",
    "baseUrl": "../../",
    "paths": {
      "@repo/types/*": ["packages/types/*"],
      "@repo/db/*": ["packages/db/*"]
    }
  },
  "include": [
    "../../packages/types/**/*.ts",
    "../../packages/db/**/*.ts",
    "src/**/*.ts"
  ]
}
