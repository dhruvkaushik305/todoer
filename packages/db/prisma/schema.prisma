model Follow {
  id           String   @id @default(uuid())
  userId       String   @unique
  followedById String   @unique
  followers    User     @relation("followers", fields: [userId], references: [id]) //People who follow this user
  following    User     @relation("following", fields: [followedById], references: [id]) //People who this user is following
  createdAt    DateTime @default(now())
}
